    <Window x:Class="Istasyon.FileSync.LoginDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Yetkili Girişi" Height="320" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        Background="#F5F6F7">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Ayarları değiştirmek için lütfen giriş yapın." 
                   Grid.Row="0" Margin="0,0,0,20" Foreground="#2C3E50" TextWrapping="Wrap"/>

        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Kullanıcı Adı:" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox x:Name="TxtUsername" Padding="5"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0,0,0,20">
            <TextBlock Text="Şifre:" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <PasswordBox x:Name="TxtPassword" Padding="5"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <Button Content="İptal" IsCancel="True" Click="BtnCancel_Click" Padding="15,5" Margin="0,0,10,0" Background="#BDC3C7" Foreground="White" BorderThickness="0"/>
            <Button Content="Giriş Yap" IsDefault="True" Click="BtnLogin_Click" Padding="15,5" Background="#2ECC71" Foreground="White" BorderThickness="0"/>
        </StackPanel>
    </Grid>
</Window>
