<Window x:Class="Istasyon.FileSync.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="İstasyon FileSync" Height="550" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#F5F6F7"
        FontFamily="Segoe UI"
        Icon="{StaticResource AppLogo}">
    <Grid>
        <TabControl Background="Transparent" BorderThickness="0,1,0,0" BorderBrush="#DCDDE1">
            <!-- AYARLAR SEKMESİ -->
            <TabItem Header="Ayarlar" Padding="20,10">
                <Grid Margin="30">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Margin="0,0,0,20">
                        <TextBlock Text="Sistem Yapılandırması" FontSize="24" FontWeight="Bold" Foreground="#2C3E50"/>
                        <TextBlock Text="Klasör izleme ve sunucu bağlantı ayarları." Foreground="#7F8C8D"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1">
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="İzlenecek Klasör" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="TxtFolderPath" Padding="10" BorderThickness="1" BorderBrush="#DCDDE1"/>
                                <Button Grid.Column="1" Content="Gözat..." Click="BtnBrowse_Click" Padding="15,5" Margin="10,0,0,0" 
                                        Background="#3498DB" Foreground="White" BorderThickness="0" Cursor="Hand"/>
                            </Grid>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Sunucu API URL" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="TxtApiUrl" Padding="10" BorderThickness="1" BorderBrush="#DCDDE1"/>
                                <Button Grid.Column="1" Content="Test Et" Click="BtnTestConnection_Click" Padding="15,5" Margin="10,0,0,0" 
                                        Background="#3498DB" Foreground="White" BorderThickness="0" Cursor="Hand"/>
                            </Grid>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="API Anahtarı (Token)" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBox x:Name="TxtApiKey" Padding="10" BorderThickness="1" BorderBrush="#DCDDE1"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="İstasyon ID" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBox x:Name="TxtIstasyonId" Padding="10" BorderThickness="1" BorderBrush="#DCDDE1"/>
                        </StackPanel>

                        <CheckBox x:Name="ChkAutoStart" Content="Windows başladığında otomatik çalıştır" Margin="0,10,0,0" VerticalContentAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                        <Button Content="Kapat" Click="BtnCancel_Click" Padding="25,10" Margin="0,0,10,0" 
                                Background="#BDC3C7" Foreground="White" BorderThickness="0" Cursor="Hand"/>
                        <Button Content="Ayarları Kaydet" Click="BtnSave_Click" Padding="25,10" 
                                Background="#2ECC71" Foreground="White" BorderThickness="0" FontWeight="Bold" Cursor="Hand"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- LOG GÖZLEMLEME SEKMESİ -->
            <TabItem Header="Transfer Logları" Padding="20,10">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="İşlem Geçmişi" FontSize="20" FontWeight="Bold" Foreground="#2C3E50" VerticalAlignment="Center"/>
                        <Button Content="Yenile" Click="BtnRefreshLogs_Click" Margin="20,0,0,0" Padding="15,5" 
                                Background="#95A5A6" Foreground="White" BorderThickness="0" Cursor="Hand"/>
                    </StackPanel>

                    <DataGrid x:Name="DgLogs" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" 
                              Background="White" BorderThickness="1" BorderBrush="#DCDDE1"
                              RowBackground="White" AlternatingRowBackground="#F9F9F9"
                              GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#F0F0F0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Dosya Adı" Binding="{Binding FileName}" Width="2*"/>
                            <DataGridTemplateColumn Header="Durum" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Padding="5,2" CornerRadius="3" HorizontalAlignment="Center">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="Sent">
                                                            <Setter Property="Background" Value="#D5F5E3"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Failed">
                                                            <Setter Property="Background" Value="#FADBD8"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Pending">
                                                            <Setter Property="Background" Value="#FCF3CF"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding Status}" FontWeight="SemiBold">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="Sent">
                                                                <Setter Property="Foreground" Value="#1D8348"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Failed">
                                                                <Setter Property="Foreground" Value="#943126"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Pending">
                                                                <Setter Property="Foreground" Value="#9A7D0A"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Son İşlem" Binding="{Binding LastAttempt, StringFormat={}{0:dd.MM.yyyy HH:mm:ss}}" Width="150"/>
                            <DataGridTextColumn Header="Hata Mesajı" Binding="{Binding ErrorMessage}" Width="3*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="2" Margin="0,10,0,0">
                        <TextBlock x:Name="TxtStatusSummary" Text="Toplam 0 işlem bulundu." Foreground="#7F8C8D" FontSize="12"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
