<Window x:Class="Istasyon.FileSync.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="İstasyon FileSync" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F5F6F7"
        FontFamily="Segoe UI"
        Icon="{StaticResource AppLogo}">
    <Grid>
        <TabControl Background="Transparent" BorderThickness="0,1,0,0" BorderBrush="#DCDDE1">
            
            <!-- 1. DASHBOARD / ANA PANEL -->
            <TabItem Header="Panel" Padding="20,10">
                <Grid Margin="30">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Üst Bilgi Başlık -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,30">
                        <TextBlock Text="İstasyon Durumu" FontSize="28" FontWeight="Bold" Foreground="#2C3E50"/>
                        <TextBlock Text="Anlık sistem takibi ve bağlantı durumu." Foreground="#7F8C8D" FontSize="16"/>
                    </StackPanel>

                    <!-- Dashboard Kartları -->
                    <Grid Grid.Row="1" Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- İstasyon Bilgisi -->
                        <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="20" BorderBrush="#E0E0E0" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="İstasyon Bilgisi" Foreground="#95A5A6" FontWeight="SemiBold"/>
                                <TextBlock x:Name="TxtDashStationName" Text="Yükleniyor..." FontSize="18" FontWeight="Bold" Margin="0,10,0,0" TextTrimming="CharacterEllipsis"/>
                                <TextBlock x:Name="TxtDashFirmName" Text="Firma: -" Foreground="#7F8C8D" FontWeight="SemiBold" Margin="0,2,0,0"/>
                                <TextBlock x:Name="TxtDashAddress" Text="Adres: -" Foreground="#BDC3C7" FontSize="11" Margin="0,2,0,0" TextWrapping="Wrap" MaxHeight="40" TextTrimming="CharacterEllipsis"/>
                                <TextBlock x:Name="TxtDashStationId" Text="ID: -" Foreground="#BDC3C7" Margin="0,5,0,0" FontSize="10"/>

                                <Separator Margin="0,15" Background="#F0F0F0"/>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <TextBlock Grid.Row="0" Text="İst. Sorumlusu:" Foreground="#95A5A6" FontSize="12" Margin="0,0,10,5"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" x:Name="TxtDashStationManager" Text="-" FontWeight="SemiBold" FontSize="12" TextTrimming="CharacterEllipsis"/>

                                    <TextBlock Grid.Row="1" Text="Var. Sorumlusu:" Foreground="#95A5A6" FontSize="12" Margin="0,0,10,5"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" x:Name="TxtDashShiftSupervisor" Text="-" FontWeight="SemiBold" FontSize="12" TextTrimming="CharacterEllipsis"/>

                                    <TextBlock Grid.Row="2" Text="Firma Sahibi:" Foreground="#95A5A6" FontSize="12" Margin="0,0,10,0"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" x:Name="TxtDashBoss" Text="-" FontWeight="SemiBold" FontSize="12" TextTrimming="CharacterEllipsis"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Son Gönderim -->
                        <Border Grid.Column="2" Background="White" CornerRadius="8" Padding="20" BorderBrush="#E0E0E0" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="Son Başarılı Transfer" Foreground="#95A5A6" FontWeight="SemiBold"/>
                                <TextBlock x:Name="TxtDashLastUploadDate" Text="Henüz yok" FontSize="18" FontWeight="Bold" Margin="0,10,0,0"/>
                                <TextBlock x:Name="TxtDashLastFileName" Text="-" Foreground="#BDC3C7" Margin="0,5,0,0" TextTrimming="CharacterEllipsis"/>
                            </StackPanel>
                        </Border>

                        <!-- Durum / Test -->
                         <Border Grid.Column="4" Background="White" CornerRadius="8" Padding="20" BorderBrush="#E0E0E0" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="Bağlantı Testi" Foreground="#95A5A6" FontWeight="SemiBold"/>
                                <Button Content="Sistemi Test Et" Click="BtnTestConnection_Click" Margin="0,10,0,0" Padding="10" 
                                        Background="#3498DB" Foreground="White" BorderThickness="0" Cursor="Hand" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Diagnostik Listesi (Dashboard'da) -->
                     <Border Grid.Row="2" Background="White" BorderThickness="1" BorderBrush="#E0E0E0" CornerRadius="8" Padding="20">
                        <StackPanel>
                            <TextBlock Text="Sistem Sağlık Kontrolü" FontWeight="Bold" Margin="0,0,0,15" Foreground="#34495E" FontSize="16"/>
                            <ItemsControl x:Name="IcDiagnostics">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="35"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{Binding Icon}" FontSize="18" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="1" Text="{Binding CheckName}" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center" Margin="0,0,15,0"/>
                                            <TextBlock Grid.Column="2" Text="{Binding Message}" Foreground="Gray" FontSize="14" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            <TextBlock x:Name="TxtDiagnosticPlaceholder" Text="Test başlatmak için yukarıdaki butona tıklayın." 
                                       FontStyle="Italic" Foreground="Gray" HorizontalAlignment="Center" Margin="0,20"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>

             <!-- 2. LOGLAR -->
             <TabItem Header="Transfer Logları" Padding="20,10">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="İşlem Geçmişi" FontSize="24" FontWeight="Bold" Foreground="#2C3E50" VerticalAlignment="Center"/>
                        <Button Content="Yenile" Click="BtnRefreshLogs_Click" Margin="20,0,0,0" Padding="15,5" 
                                Background="#95A5A6" Foreground="White" BorderThickness="0" Cursor="Hand"/>
                    </StackPanel>

                    <DataGrid x:Name="DgLogs" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" 
                              Background="White" BorderThickness="1" BorderBrush="#DCDDE1"
                              RowBackground="White" AlternatingRowBackground="#F9F9F9"
                              GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#F0F0F0" Padding="10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Dosya Adı" Binding="{Binding FileName}" Width="2*"/>
                            <DataGridTemplateColumn Header="Durum" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Padding="5,2" CornerRadius="3" HorizontalAlignment="Center">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="Sent">
                                                            <Setter Property="Background" Value="#D5F5E3"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Failed">
                                                            <Setter Property="Background" Value="#FADBD8"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Reddedildi">
                                                            <Setter Property="Background" Value="#FADBD8"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Pending">
                                                            <Setter Property="Background" Value="#FCF3CF"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Klasörde (Bekliyor)">
                                                            <Setter Property="Background" Value="#D6EAF8"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Gözardı Edildi (Uzantı)">
                                                            <Setter Property="Background" Value="#EBEDEF"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding Status}" FontWeight="SemiBold">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="Sent">
                                                                <Setter Property="Foreground" Value="#1D8348"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Failed">
                                                                <Setter Property="Foreground" Value="#943126"/>
                                                            </DataTrigger>
                                                             <DataTrigger Binding="{Binding Status}" Value="Reddedildi">
                                                                <Setter Property="Foreground" Value="#943126"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Pending">
                                                                <Setter Property="Foreground" Value="#9A7D0A"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Klasörde (Bekliyor)">
                                                                <Setter Property="Foreground" Value="#2980B9"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Gözardı Edildi (Uzantı)">
                                                                <Setter Property="Foreground" Value="#7F8C8D"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Son İşlem" Binding="{Binding LastAttempt, StringFormat={}{0:dd.MM.yyyy HH:mm:ss}}" Width="150"/>
                            <DataGridTextColumn Header="Hata Mesajı" Binding="{Binding ErrorMessage}" Width="3*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="2" Margin="0,10,0,0">
                        <TextBlock x:Name="TxtStatusSummary" Text="Toplam 0 işlem bulundu." Foreground="#7F8C8D" FontSize="12"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- 3. AYARLAR (KORUMALI) -->
            <TabItem Header="Ayarlar" Padding="20,10">
                <Grid Margin="30">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header & Unlock -->
                    <Grid Grid.Row="0" Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Sistem Yapılandırması" FontSize="24" FontWeight="Bold" Foreground="#2C3E50"/>
                            <TextBlock Text="Ayarları değiştirmek için yetkili girişi gereklidir." Foreground="#7F8C8D"/>
                        </StackPanel>
                        <Button x:Name="BtnUnlockSettings" Grid.Column="1" Content="🔓 Kilidi Aç / Düzenle" Click="BtnUnlockSettings_Click" 
                                Padding="15,8" Background="#F1C40F" Foreground="Black" FontWeight="Bold" BorderThickness="0" Cursor="Hand" VerticalAlignment="Center"/>
                        <!-- Kilit Durumu -->
                    </Grid>

                    <!-- Settings Panel (Disabled by default) -->
                    <StackPanel x:Name="PnlSettings" Grid.Row="1" IsEnabled="False">
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="İzlenecek Klasör" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="TxtFolderPath" Padding="10" BorderThickness="1" BorderBrush="#DCDDE1"/>
                                <Button Grid.Column="1" Content="Gözat..." Click="BtnBrowse_Click" Padding="15,5" Margin="10,0,0,0" 
                                        Background="#3498DB" Foreground="White" BorderThickness="0" Cursor="Hand"/>
                            </Grid>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Sunucu API URL" FontWeight="SemiBold" Margin="0,0,0,5"/>
                             <TextBox x:Name="TxtApiUrl" Padding="10" BorderThickness="1" BorderBrush="#DCDDE1"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="API Anahtarı (Token)" FontWeight="SemiBold" Margin="0,0,0,5"/>
                             <TextBox x:Name="TxtApiKey" Padding="10" BorderThickness="1" BorderBrush="#DCDDE1" IsReadOnly="False" Background="White"/> 
                             <!-- IsReadOnly artık PnlSettings.IsEnabled ile kontrol edilecek, ayrı butona gerek yok -->
                        </StackPanel>

                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="İstasyon ID" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBox x:Name="TxtIstasyonId" Padding="10" BorderThickness="1" BorderBrush="#DCDDE1"/>
                        </StackPanel>

                        <CheckBox x:Name="ChkAutoStart" Content="Windows başladığında otomatik çalıştır" Margin="0,10,0,0" VerticalContentAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                         <!-- Kaydet butonu da PnlSettings içinde değil o yüzden IsEnabled kontrolü manuel yapılabilir yada panel içinde tutulabilir
                              Ancak "Kaydet" sadece edit modundaysa aktif olmalı.
                          -->
                        <Button x:Name="BtnSaveSettings" Content="Ayarları Kaydet" Click="BtnSave_Click" Padding="25,10" 
                                Background="#2ECC71" Foreground="White" BorderThickness="0" FontWeight="Bold" Cursor="Hand" IsEnabled="False" Opacity="0.5"/>
                    </StackPanel>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Window>
