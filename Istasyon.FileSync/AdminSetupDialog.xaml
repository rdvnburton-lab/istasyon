<Window x:Class="Istasyon.FileSync.AdminSetupDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="İstasyon Seçimi" Height="300" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Lütfen bağlanılacak istasyonu seçiniz." 
                       FontSize="16" FontWeight="SemiBold" TextAlignment="Center" Margin="0,0,0,15"/>

            <TextBlock Text="Firma:" FontWeight="Bold" Margin="0,0,0,5"/>
            <ComboBox x:Name="CmbFirms" DisplayMemberPath="Ad" 
                      SelectionChanged="CmbFirms_SelectionChanged" Height="30" Margin="0,0,0,15"/>

            <TextBlock Text="İstasyon:" FontWeight="Bold" Margin="0,0,0,5"/>
            <ComboBox x:Name="CmbStations" DisplayMemberPath="Ad" 
                      SelectionChanged="CmbStations_SelectionChanged" Height="30" IsEnabled="False" Margin="0,0,0,15"/>

            <Button x:Name="BtnSave" Content="Seçimi Kaydet" Click="BtnSave_Click" 
                    Height="40" Margin="0,5,0,0" IsEnabled="False"
                    Background="#007ACC" Foreground="White" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
